<p id="notice"><%= notice %></p>

<div class="showproduct">
  <div class="row">
    <div class="col-sm-12 col-md-12">

        <h2>
          <%= @product.name %>
        </h2>

          

              <div class="col-xs-12 col-sm-12 col-md-6 parent">
                <%= link_to(image_tag(@product.image_url))%>
                <div class="col-xs-12 col-sm-12 col-md-12">
                  
                  <div class="proddesc">
                     <p>
                      <strong>Description:</strong>
                      <%= @product.description %>
                    </p>

                    <p>
                      <strong>Color:</strong>
                      <%= @product.color %>
                    </p>

                    <p>
                      <strong>Price:</strong>
                      <%= @product.price %>
                    </p>

                    <p>
                      <strong>Image url:</strong>
                      <%= @product.image_url %>
                    </p>
                  


                  <div class="prodbutton">
                    <button><%= link_to 'Edit Product', edit_product_path(@product) %> </button>
                    <button><%= link_to 'Back to Products Listing', products_path %></button>
                  </div>
                </div>
                </div>

              </div>


              <!-- new comment show -->
              <div class="col-xs-12 col-sm-12 col-md-6">
                 <h3>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </h3>
                  <%= render "new_comment" %>
                  <%= render "comments" %>


            

      </div>
    </div>
  </div>